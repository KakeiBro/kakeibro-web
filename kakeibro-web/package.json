{
  "name": "kakeibro-web",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "pTest": "vitest run --silent",
    "test": "vitest --watch",
    "coverage": "vitest run --coverage",
    "check-packages": "pnpm outdated",
    "preview": "vite preview",
    "deploy": "tsc -b && vite build && firebase deploy --only hosting",
    "prepare": "cd .. && husky kakeibro-web/.husky"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router": "^7.7.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react-swc": "^3.11.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "firebase-tools": "^13.35.1",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "msw": "^2.10.4",
    "prettier": "3.5.0",
    "typescript": "~5.7.3",
    "typescript-eslint": "^8.38.0",
    "vite": "^6.3.5",
    "vitest": "^3.2.4"
  },
  "pnpm": {
    "auditConfig": {
      "ignoreGhsas": []
    }
  }
}
